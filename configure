#!/bin/sh -eu

rm -f config.mk

# LibreSSL
case "$(uname -s)" in
	OpenBSD)
		# included with OS
		echo 'LDLIBS += -ltls -lssl' >> config.mk
		;;
	*)
		pkg-config --print-errors 'libtls >= 2.5.0'
		cat >> config.mk <<-EOF
			CFLAGS += $(pkg-config --cflags libtls libssl)
			LDFLAGS += $(pkg-config --libs-only-L libtls libssl)
			LDLIBS += $(pkg-config --libs-only-l libtls libssl)
		EOF
esac
